<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="@dimen/height_item_booking_step"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/tvStepNumber"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_centerVertical="true"
        android:background="@drawable/bg_circle_gray"
        android:fontFamily="@font/lato_bold"
        android:gravity="center"
        android:includeFontPadding="false"
        android:src="@mipmap/ic_launcher"
        android:text="1"
        android:textColor="@color/white"
        android:textSize="11sp" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ivStatusStepDone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_centerVertical="true"
        app:srcCompat="@drawable/ic_check_circle" />

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/dimen_8dp"
        android:layout_toEndOf="@+id/tvStepNumber"
        android:fontFamily="@font/lato_bold"
        android:includeFontPadding="false"
        android:text="Payment"
        android:textColor="#ff000000"
        android:textSize="13sp" />

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="@dimen/height_item_booking_step"
        android:layout_toEndOf="@id/tvTitle"
        android:orientation="horizontal">

        <View
            android:id="@+id/viewDivider"
            android:layout_width="18dp"
            android:layout_height="3dp"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/dimen_14dp"
            android:layout_marginEnd="@dimen/dimen_14dp"
            android:background="@drawable/bg_divider_booking_step_waiting" />
    </FrameLayout>
</RelativeLayout>