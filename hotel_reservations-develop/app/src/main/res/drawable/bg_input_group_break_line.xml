<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_activated="true" android:state_selected="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/colorAccent" />
        </shape>
    </item>
    <item android:state_activated="false" android:state_selected="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/colorScarlet" />
        </shape>
    </item>

    <item android:state_activated="true" android:state_selected="false">
        <shape android:shape="rectangle">
            <solid android:color="@color/color_divider" />
        </shape>
    </item>
    <item android:state_activated="false" android:state_selected="false">
        <shape android:shape="rectangle">
            <solid android:color="@color/colorScarlet" />
        </shape>
    </item>
</selector>
